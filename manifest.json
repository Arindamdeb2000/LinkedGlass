{
  "manifest_version": 2,

  "name": "LinkedGlass",
  "description": "View a company's Glassdoor rating while searching LinkedIn jobs",
  "version": "1.0",
  "author": "Nicholas Condo",

  "icons": { "48": "lg_icon48.png",
            "128": "lg_icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "css": ["content.css"],
      "js": ["contentscript.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "https://api.glassdoor.com/*"
  ]

}
